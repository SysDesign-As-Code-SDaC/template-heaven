{
  "name": "react-vite-frontend",
  "version": "1.0.0",
  "description": "Modern React frontend template with TypeScript, Vite, and comprehensive tooling",
  "type": "module",
  "main": "dist/index.html",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:dev": "tsc && vite build --mode development",
    "build:prod": "tsc && vite build --mode production",
    "preview": "vite preview",
    "serve": "vite preview --port 3000",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "analyze": "npx vite-bundle-analyzer",
    "size": "npx size-limit",
    "security": "npm audit --audit-level moderate",
    "clean": "rimraf dist coverage .vite",
    "docker:build": "docker build -t react-vite-frontend .",
    "docker:run": "docker run -p 3000:3000 react-vite-frontend",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "prepare": "husky install",
    "commit": "cz",
    "release": "semantic-release"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.0",
    "axios": "^1.6.0",
    "zustand": "^4.4.0",
    "react-query": "^3.39.0",
    "react-hook-form": "^7.48.0",
    "zod": "^3.22.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.2.0",
    "lucide-react": "^0.303.0",
    "react-helmet-async": "^2.0.0",
    "react-error-boundary": "^4.0.0",
    "react-hot-toast": "^2.4.0",
    "framer-motion": "^11.0.0",
    "react-intersection-observer": "^9.5.0",
    "react-loading-skeleton": "^3.3.0",
    "react-dropzone": "^14.2.0",
    "react-paginate": "^8.2.0",
    "react-table": "^7.8.0",
    "recharts": "^2.8.0",
    "react-markdown": "^9.0.0",
    "react-syntax-highlighter": "^15.5.0",
    "react-datepicker": "^6.1.0",
    "react-select": "^5.8.0",
    "react-modal": "^3.16.0",
    "react-tooltip": "^5.25.0",
    "react-use": "^17.4.0",
    "date-fns": "^3.0.0",
    "lodash-es": "^4.17.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/node": "^20.10.0",
    "@types/lodash-es": "^4.17.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "husky": "^8.0.0",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.0.0",
    "playwright": "^1.40.0",
    "postcss": "^8.4.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "size-limit": "^11.0.0",
    "storybook": "^7.6.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^0.10.0",
    "vite-plugin-pwa": "^0.17.0",
    "vitest": "^1.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "semantic-release": "^22.0.0",
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@semantic-release/github": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "size-limit": [
    {
      "path": "dist/assets/*.js",
      "limit": "500 KB",
      "gzip": true
    },
    {
      "path": "dist/assets/*.css",
      "limit": "50 KB",
      "gzip": true
    }
  ]
}
