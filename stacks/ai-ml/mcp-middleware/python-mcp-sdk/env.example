# Python MCP SDK Template - Environment Configuration
# Copy this file to .env and customize for your environment

# ============================================================================
# Application Configuration
# ============================================================================
APP_NAME="Python MCP SDK Template"
APP_VERSION="1.0.0"
APP_DESCRIPTION="Production-ready MCP server and client template"
ENVIRONMENT="development"

# ============================================================================
# MCP Server Configuration
# ============================================================================
MCP_HOST="0.0.0.0"
MCP_PORT="8000"
MCP_LOG_LEVEL="INFO"
MCP_DEBUG="false"
MCP_MAX_CONNECTIONS="100"
MCP_CONNECTION_TIMEOUT="30"
MCP_REQUEST_TIMEOUT="60"

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL="postgresql://mcp_user:mcp_pass@localhost:5432/mcp_db"
DATABASE_POOL_SIZE="20"
DATABASE_MAX_OVERFLOW="30"
DATABASE_POOL_TIMEOUT="30"
DATABASE_POOL_RECYCLE="3600"

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS="20"
REDIS_SOCKET_TIMEOUT="5"
REDIS_SOCKET_CONNECT_TIMEOUT="5"

# ============================================================================
# Security Configuration
# ============================================================================
SECURITY_SECRET_KEY="mcp-sdk-secret-key-change-in-production"
SECURITY_JWT_ALGORITHM="HS256"
SECURITY_JWT_EXPIRATION_HOURS="24"
SECURITY_PASSWORD_MIN_LENGTH="8"
SECURITY_MAX_LOGIN_ATTEMPTS="5"
SECURITY_LOCKOUT_DURATION_MINUTES="30"

# ============================================================================
# Monitoring Configuration
# ============================================================================
MONITORING_ENABLED="true"
MONITORING_METRICS_PORT="9090"
MONITORING_HEALTH_CHECK_INTERVAL="30"
MONITORING_LOG_REQUESTS="true"
MONITORING_LOG_RESPONSES="false"

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"
CORS_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_HEADERS="*"

# ============================================================================
# Development Tools
# ============================================================================
JUPYTER_TOKEN="mcp-dev-token"
PGADMIN_DEFAULT_EMAIL="admin@mcp.dev"
PGADMIN_DEFAULT_PASSWORD="admin123"

# ============================================================================
# External Services (Optional)
# ============================================================================
# GITHUB_TOKEN="your-github-token-here"
# OPENAI_API_KEY="your-openai-api-key-here"
# ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# ============================================================================
# Production Overrides
# ============================================================================
# Uncomment and modify for production deployment

# ENVIRONMENT="production"
# MCP_DEBUG="false"
# MCP_LOG_LEVEL="WARNING"
