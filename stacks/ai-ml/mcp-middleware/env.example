# MCP Middleware Environment Configuration

# Application Settings
APP_ENV=production
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000

# Database Configuration
DATABASE_URL=postgresql://mcp:password@localhost:5432/mcp_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
DEBUG=false

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=100

# Server Types (comma-separated)
DEFAULT_SERVERS=filesystem,database,web,git,api,search,execution,vector,clickup

# Filesystem Server Configuration
FILESYSTEM_ROOT_PATH=/tmp/mcp-files
FILESYSTEM_ALLOWED_EXTENSIONS=txt,md,json,py,js,html,css
FILESYSTEM_MAX_FILE_SIZE_MB=10

# Database Server Configuration
DATABASE_ALLOWED_TYPES=postgresql,mysql,sqlite,mongodb
DATABASE_MAX_CONNECTIONS=10
DATABASE_QUERY_TIMEOUT=30

# Web Server Configuration
WEB_USER_AGENT=MCP-Middleware/1.0
WEB_REQUEST_TIMEOUT=30
WEB_MAX_CONTENT_LENGTH_MB=50

# Git Server Configuration
GIT_ALLOWED_DOMAINS=github.com,gitlab.com,bitbucket.org
GIT_MAX_REPO_SIZE_MB=100
GIT_CLONE_TIMEOUT=300

# API Server Configuration
API_MAX_REQUESTS_PER_MINUTE=50
API_REQUEST_TIMEOUT=30
API_ALLOWED_DOMAINS=*

# Search Server Configuration
SEARCH_DEFAULT_ENGINE=duckduckgo
SEARCH_MAX_RESULTS=50
SEARCH_CACHE_TTL=3600

# Code Execution Server Configuration
EXECUTION_TIMEOUT=60
EXECUTION_MEMORY_LIMIT_MB=100
EXECUTION_ALLOWED_LANGUAGES=python,javascript,bash,r,julia

# Vector Search Server Configuration
VECTOR_DEFAULT_BACKEND=in_memory
VECTOR_EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_MAX_DIMENSION=1536

# ClickUp Server Configuration
CLICKUP_API_TOKEN=your_clickup_api_token_here
CLICKUP_TEAM_ID=
CLICKUP_DEFAULT_LIST=

# Metrics and Monitoring
METRICS_ENABLED=true
TRACING_ENABLED=false
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7

# SSL/TLS Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# External Integrations
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=
COHERE_API_KEY=

# Logging
LOG_FORMAT=json
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Development Settings (only for development)
DEBUG=false
RELOAD=false
AUTO_RESTART=true
