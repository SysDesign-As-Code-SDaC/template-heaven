# Template Heaven Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
TEMPLATEHEAVEN_ENV=production
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./data/templateheaven.db
# For PostgreSQL: postgresql://templateheaven:password@localhost:5432/templateheaven
# For MySQL: mysql://templateheaven:password@localhost:3306/templateheaven

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# GitHub API Configuration
GITHUB_TOKEN=your-github-token-here
GITHUB_RATE_LIMIT=5000

# Authentication Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Paths
TEMPLATES_DIR=./templates
STACKS_DIR=./stacks

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics

# Documentation
ENABLE_DOCS=true

# PostgreSQL Database (for Docker Compose)
POSTGRES_PASSWORD=templateheaven_password

# Grafana
GRAFANA_PASSWORD=admin

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# External Services
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# Development Settings (for local development)
# TEMPLATEHEAVEN_ENV=development
# DEBUG=true
# LOG_LEVEL=DEBUG
